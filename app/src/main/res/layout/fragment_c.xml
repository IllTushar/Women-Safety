<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentC"
    android:background="@drawable/fragment">

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="9dp"
        android:background="@drawable/circle_blank"/>

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_blank"/>

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_filled"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<ImageView
    android:layout_marginTop="50dp"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:src="@drawable/law"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Women Laws"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:paddingLeft="5dp"
            android:text="1. The Prohibition of Child Marriage Act, 2006"
            android:textStyle="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:paddingLeft="5dp"
            android:text="2. Special Marriage Act, 1954"
            android:textStyle="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:paddingLeft="5dp"
            android:text="3. Dowry Prohibition Act, 1961"
            android:textStyle="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:paddingLeft="5dp"
            android:text="4. Indian Divorce Act, 1969"
            android:textStyle="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="10dp"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:paddingLeft="5dp"
            android:text="5. Sexual Harassment of Women at Workplace (Prevention, Prohibition and Redressal) Act, 2013"
            android:textStyle="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="10dp"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:paddingLeft="5dp"
            android:text="6. Indecent Representation of Women(Prevention) Act,1986"
            android:textStyle="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="10dp"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:paddingLeft="5dp"
            android:text="7. Equal Remuneration Act, 1976"
            android:textStyle="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="10dp"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:paddingLeft="5dp"
            android:text="8. National Commission for Women Act, 1990"
            android:textStyle="normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</FrameLayout>